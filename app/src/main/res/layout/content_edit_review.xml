<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.upenn.goodwatch.EditReviewActivity"
    tools:showIn="@layout/activity_edit_review">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="369dp"
        android:layout_height="30dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:text="                        Please Update your Review Below"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="118dp"
        android:layout_height="43dp"
        android:layout_marginEnd="259dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="39dp"
        android:text="Updated Rating"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Spinner
        android:id="@+id/spinnerEditReview"
        android:layout_width="119dp"
        android:layout_height="87dp"
        android:layout_marginEnd="257dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/newReview"
        android:layout_width="296dp"
        android:layout_height="79dp"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="41dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/submitEdittedReview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerEditReview" />

    <Button
        android:id="@+id/submitEdittedReview"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="43dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="55dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteReview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newReview" />

    <Button
        android:id="@+id/deleteReview"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="55dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/submitEdittedReview"
        app:layout_constraintTop_toBottomOf="@+id/newReview" />

</android.support.constraint.ConstraintLayout>
